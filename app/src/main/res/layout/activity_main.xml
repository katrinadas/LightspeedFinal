<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="409dp"
        android:layout_height="734dp"
        android:layout_marginEnd="2dp"
        android:background="#190E2E"
        android:src="@tools:sample/avatars"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666"
        app:srcCompat="@drawable/lightspeed_finals" />

    <Button
        android:id="@+id/button2"
        android:layout_width="130dp"
        android:layout_height="49dp"
        android:onClick="onLeaderboardPressed"
        android:text="Leaderboard"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="571dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="130dp"
        android:layout_height="49dp"
        android:onClick="onTutorialPressed"
        android:text="Tutorial"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="571dp" />

    <Button
        android:id="@+id/playbutton"
        android:layout_width="70dp"
        android:layout_height="71dp"
        android:onClick="onPlayPressed"
        app:icon="@android:drawable/ic_media_play"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="834dp" />

</androidx.constraintlayout.widget.ConstraintLayout>